# Arbitrage Bot Configuration

# ====================================
# GENERAL CONFIGURATION
# ====================================
LOG_LEVEL=info

# ====================================
# BLOCKCHAIN RPC CONFIGURATION
# ====================================
# IMPORTANT: Set these values in your .env file
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# ====================================
# PRIVATE KEYS (KEEP SECURE!)
# ====================================
# IMPORTANT: Set your private key for transaction execution
PRIVATE_KEY=your-ethereum-private-key-here

# ====================================
# ARBITRAGE PARAMETERS
# ====================================
# Minimum profit threshold in ETH
MIN_PROFIT_ETH=0.01

# Maximum gas price in gwei
MAX_GAS_PRICE=100

# Slippage tolerance percentage
MAX_SLIPPAGE=2

# ====================================
# RISK MANAGEMENT
# ====================================
# Enable/disable risk management features
ENABLE_RISK_MANAGEMENT=true

# Maximum position size in ETH
MAX_POSITION_SIZE=1.0

# Stop loss percentage
STOP_LOSS_PERCENT=5

# Maximum concurrent trades
MAX_CONCURRENT_TRADES=3

# ====================================
# PAPER TRADING
# ====================================
# Enable paper trading mode for testing
PAPER_TRADING_MODE=true

# ====================================
# PERFORMANCE MONITORING
# ====================================
# Enable detailed logging and metrics
DEBUG_MODE=false
ENABLE_METRICS=true 