# Copy Trader Bot Configuration

# ====================================
# GENERAL CONFIGURATION
# ====================================
LOG_LEVEL=info

# ====================================
# BLOCKCHAIN CONFIGURATION
# ====================================
# Supported chains: ETH, SOL
CHAIN=ETH

# ====================================
# ETHEREUM CONFIGURATION
# ====================================
# IMPORTANT: Set these values in your .env file
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ETH_WEBSOCKET_RPC_URL=wss://eth-mainnet.g.alchemy.com/v2/your-api-key
ETH_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/your-api-key

# ====================================
# SOLANA CONFIGURATION
# ====================================
SOLANA_WEBSOCKET_RPC_URL=wss://api.mainnet-beta.solana.com

# ====================================
# PRIVATE KEYS (KEEP SECURE!)
# ====================================
# IMPORTANT: Set your private keys for transaction execution
PRIVATE_KEY=your-ethereum-private-key-here
SOLANA_PRIVATE_KEY=your-solana-private-key-here

# ====================================
# COPY TRADING CONFIGURATION
# ====================================
# IMPORTANT: Set the wallet address you want to copy
TARGET_WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# Multiple target wallets (comma-separated)
TARGET_WALLETS=0x1234567890123456789012345678901234567890,0x0987654321098765432109876543210987654321

# Primary target wallet for copying
TARGET_WALLET=0x1234567890123456789012345678901234567890

# ====================================
# COPY TRADING PARAMETERS
# ====================================
# Percentage of your portfolio to copy with (1-100)
COPY_PERCENTAGE=10

# Maximum trade size in native token
MAX_TRADE_SIZE=1.0

# Minimum trade size in native token
MIN_TRADE_SIZE=0.01

# Maximum slippage tolerance percentage
MAX_SLIPPAGE=2

# Maximum gas price in gwei
MAX_GAS_PRICE=100

# Minimum transaction value to copy
MIN_TRANSACTION_VALUE=0.1

# ====================================
# FILTERING CONFIGURATION
# ====================================
# Tokens to specifically follow (comma-separated addresses)
FOLLOW_TOKENS=

# Tokens to exclude from copying (comma-separated addresses)
EXCLUDE_TOKENS=

# Delay before copying trades (milliseconds)
COPY_DELAY=1000

# ====================================
# RISK MANAGEMENT
# ====================================
# Enable/disable risk management features
ENABLE_RISK_MANAGEMENT=true

# Enable/disable trade filtering
ENABLE_FILTERING=true

# Stop loss percentage
STOP_LOSS=5

# Take profit percentage
TAKE_PROFIT=10

# ====================================
# PAPER TRADING
# ====================================
# Enable paper trading mode for testing
PAPER_TRADING_MODE=true

# ====================================
# PERFORMANCE MONITORING
# ====================================
# Enable detailed logging and metrics
DEBUG_MODE=false
ENABLE_METRICS=true 