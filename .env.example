# =============================================================================
# TRADING BOT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Keep sensitive information secure and never commit .env files to version control

# =============================================================================
# BLOCKCHAIN RPC CONFIGURATION
# =============================================================================
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ETH_WEBSOCKET_RPC_URL=wss://eth-mainnet.g.alchemy.com/v2/your-api-key
ETH_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/your-api-key
BSC_RPC_URL=https://bsc-dataseed1.binance.org
SOL_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WEBSOCKET_RPC_URL=wss://api.mainnet-beta.solana.com

# =============================================================================
# PRIVATE KEYS (KEEP SECURE!)
# =============================================================================
PRIVATE_KEY=your-ethereum-private-key-here
SOLANA_PRIVATE_KEY=your-solana-private-key-here
MEV_PRIVATE_KEY=your-mev-execution-private-key-here

# =============================================================================
# FRONTEND/DATABASE CONFIGURATION
# =============================================================================
# Master encryption key for wallet storage (32+ characters recommended)
MASTER_ENCRYPTION_KEY=your-master-encryption-key-for-wallet-storage-here

# JWT secret for authentication (32+ characters recommended)
JWT_SECRET=your-jwt-secret-for-authentication-here

# Database path for SQLite
DATABASE_PATH=trading_bot.db

# Node environment
NODE_ENV=development

# =============================================================================
# SUPABASE CONFIGURATION (Optional - for cloud database)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# =============================================================================
# DEX AGGREGATOR API KEYS
# =============================================================================
ONEINCH_API_KEY=your-1inch-api-key

# =============================================================================
# GENERAL BOT CONFIGURATION
# =============================================================================
LOG_LEVEL=info
PAPER_TRADING_MODE=true
GLOBAL_KILL_SWITCH=false
ENABLE_RISK_MANAGEMENT=true
ENABLE_PERFORMANCE_OPTIMIZATION=true

# =============================================================================
# Trading Bot Platform Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values

# ===== SECURITY CONFIGURATION =====
# Encryption keys (generate with: openssl rand -hex 32)
MASTER_ENCRYPTION_KEY=your_master_encryption_key_here_32_bytes_min
ENCRYPTION_SALT=your_encryption_salt_here_32_bytes_min
JWT_SECRET=your_jwt_secret_here_32_bytes_minimum_length

# ===== DATABASE CONFIGURATION =====
# SQLite database path
DATABASE_PATH=./trading_bot.db
# Alternative: PostgreSQL connection
# DATABASE_URL=postgresql://username:password@localhost:5432/trading_bot

# ===== BLOCKCHAIN RPC ENDPOINTS =====
# Ethereum
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key
ETHEREUM_WSS_URL=wss://eth-mainnet.alchemyapi.io/v2/your-api-key
ETHEREUM_TESTNET_RPC_URL=https://eth-goerli.alchemyapi.io/v2/your-api-key

# Binance Smart Chain
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_WSS_URL=wss://bsc-ws-node.nariox.org:443

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-project-id
POLYGON_WSS_URL=wss://polygon-mainnet.infura.io/ws/v3/your-project-id

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WSS_URL=wss://api.mainnet-beta.solana.com

# ===== TRADING CONFIGURATION =====
# Default wallet address for trading
WALLET_ADDRESS=0x1234567890123456789012345678901234567890
# Private key (encrypted storage recommended)
WALLET_PRIVATE_KEY=your_encrypted_private_key_here

# ===== API KEYS AND EXTERNAL SERVICES =====
# Price data providers
PYTH_API_KEY=your_pyth_network_api_key
COINGECKO_API_KEY=your_coingecko_api_key
DEXSCREENER_API_KEY=your_dexscreener_api_key

# MEV and gas optimization
FLASHBOTS_API_KEY=your_flashbots_api_key
BLOXROUTE_API_KEY=your_bloxroute_api_key
ETHGASSTATION_API_KEY=your_ethgasstation_api_key

# DEX aggregators
ONEINCH_API_KEY=your_1inch_api_key
PARASWAP_API_KEY=your_paraswap_api_key

# Analytics and monitoring
MORALIS_API_KEY=your_moralis_api_key
ALCHEMY_API_KEY=your_alchemy_api_key
INFURA_PROJECT_ID=your_infura_project_id

# ===== TRADING BOT SETTINGS =====
# Risk management
MAX_SLIPPAGE=3.0
MAX_GAS_PRICE=100
MIN_PROFIT_THRESHOLD=0.5
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=500

# Performance optimization
ENABLE_ZERO_LATENCY=true
ENABLE_LIVSHITS_OPTIMIZATION=true
ENABLE_CROSS_CHAIN_ARBITRAGE=true
CACHE_TTL_MS=30000

# ===== FRONTEND CONFIGURATION =====
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ===== NOTIFICATION SERVICES =====
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Telegram bot notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Slack notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Discord notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# ===== LOGGING AND MONITORING =====
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=./logs/trading-bot.log

# ===== DEVELOPMENT SETTINGS =====
NODE_ENV=development
PORT=3001
API_PORT=3001
FRONTEND_PORT=3000

# Paper trading mode
PAPER_TRADING_MODE=true
PAPER_TRADING_BALANCE=10000

# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ===== PRODUCTION SETTINGS =====
# Set these for production deployment
# NODE_ENV=production
# PAPER_TRADING_MODE=false
# DEBUG_MODE=false
# ENABLE_FILE_LOGGING=true
