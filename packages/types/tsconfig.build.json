{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "removeComments": false,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "./index.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
} 