{
  "name": "@trading-bot/ui",
  "version": "2.0.0",
  "description": "Comprehensive React UI component library for financial trading applications with TypeScript support, accessibility features, and enterprise-grade design system",
  "keywords": [
    "react",
    "typescript", 
    "ui-components",
    "design-system",
    "trading",
    "financial",
    "accessibility",
    "tailwindcss",
    "component-library"
  ],
  "author": {
    "name": "Trading Bot Development Team",
    "email": "dev@tradingbot.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/trading-bot/ui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/trading-bot/trading-bot.git",
    "directory": "packages/ui"
  },
  "bugs": {
    "url": "https://github.com/trading-bot/trading-bot/issues"
  },
  "private": true,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts", 
      "import": "./dist/utils.esm.js",
      "require": "./dist/utils.js",
      "default": "./dist/utils.js"
    },
    "./styles": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:types && npm run build:js",
    "build:clean": "rimraf dist",
    "build:types": "tsc --project tsconfig.build.json",
    "build:js": "rollup -c rollup.config.js",
    "build:bundle": "rollup -c rollup.config.bundle.js",
    "build:watch": "tsc --project tsconfig.build.json --watch",
    "dev": "npm run build:watch",
    "lint": "eslint . --ext .ts,.tsx --cache --cache-location node_modules/.cache/eslint",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:test": "test-storybook",
    "chromatic": "chromatic --exit-zero-on-changes",
    "size-limit": "size-limit",
    "analyze": "npm run build && npx bundlesize",
    "clean": "rimraf dist node_modules/.cache",
    "prepare": "echo 'Skipping build during install'",
    "prepublishOnly": "npm run lint && npm run type-check && npm run test && npm run build",
    "release": "npm run build && changeset publish",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "validate": "npm run lint && npm run type-check && npm run test && npm run format:check"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@chromatic-com/storybook": "^1.2.25",
    "@playwright/test": "^1.42.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@size-limit/preset-small-lib": "^11.1.1",
    "@storybook/addon-a11y": "^8.0.5",
    "@storybook/addon-docs": "^8.0.5",
    "@storybook/addon-essentials": "^8.0.5",
    "@storybook/addon-interactions": "^8.0.5",
    "@storybook/addon-links": "^8.0.5",
    "@storybook/blocks": "^8.0.5",
    "@storybook/react": "^8.0.5",
    "@storybook/react-vite": "^8.0.5",
    "@storybook/test": "^8.0.5",
    "@storybook/test-runner": "^0.17.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@trading-bot/config": "workspace:*",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "autoprefixer": "^10.4.19",
    "bundlesize": "^0.18.1",
    "chromatic": "^11.0.8",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "size-limit": "^11.1.1",
    "storybook": "^8.0.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": false
    }
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "25kB"
    },
    {
      "path": "./dist/index.esm.js", 
      "maxSize": "20kB"
    }
  ],
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "25 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "20 KB"
    }
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,css}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.company.com"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/trading-bot"
  }
} 