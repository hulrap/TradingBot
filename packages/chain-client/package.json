{
  "name": "@trading-bot/chain-client",
  "version": "1.0.0",
  "description": "Multi-chain client abstraction with RPC management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@trading-bot/types": "workspace:*",
    "ethers": "^6.14.4",
    "@solana/web3.js": "^1.91.4",
    "axios": "^1.6.7",
    "ws": "^8.16.0",
    "winston": "^3.11.0",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@trading-bot/config": "workspace:*",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "tsup": "^8.0.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "solana",
    "rpc",
    "trading",
    "zero-latency"
  ],
  "author": "Trading Bot Platform",
  "license": "MIT"
} 