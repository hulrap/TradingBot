# RPC Infrastructure Configuration
# Copy this file to .env and fill in your actual API keys and endpoints

# Premium RPC Providers

# QuickNode - Premium Tier
QUICKNODE_API_KEY=your_quicknode_api_key_here
QUICKNODE_ETH_URL=https://your-endpoint.quiknode.pro/your-key/
QUICKNODE_ETH_WS=wss://your-endpoint.quiknode.pro/your-key/
QUICKNODE_BSC_URL=https://your-bsc-endpoint.bsc.quiknode.pro/your-key/
QUICKNODE_BSC_WS=wss://your-bsc-endpoint.bsc.quiknode.pro/your-key/
QUICKNODE_POLYGON_URL=https://your-polygon-endpoint.matic.quiknode.pro/your-key/
QUICKNODE_SOL_URL=https://your-solana-endpoint.solana.quiknode.pro/your-key/

# Alchemy - Premium Tier
ALCHEMY_API_KEY=your_alchemy_api_key_here
# Alchemy URLs are constructed automatically using the API key

# Chainstack - Premium Tier
CHAINSTACK_API_KEY=your_chainstack_api_key_here
CHAINSTACK_ETH_URL=https://your-endpoint.chainstack.com/your-key/

# NodeReal - BSC Premium
NODEREAL_API_KEY=your_nodereal_api_key_here

# Helius - Solana Premium
HELIUS_API_KEY=your_helius_api_key_here

# Infura - Standard Tier
INFURA_API_KEY=your_infura_api_key_here

# Rate Limiting Configuration
RPC_RATE_LIMIT_PREMIUM=100  # requests per second for premium providers
RPC_RATE_LIMIT_STANDARD=10  # requests per second for standard providers
RPC_RATE_LIMIT_FALLBACK=3   # requests per second for fallback providers

# Health Check Configuration
RPC_HEALTH_CHECK_INTERVAL=30000  # milliseconds
RPC_BLACKLIST_DURATION=300000    # 5 minutes in milliseconds
RPC_MAX_CONSECUTIVE_ERRORS=3     # errors before blacklisting

# Cache Configuration
RPC_CACHE_MAX_SIZE=10000         # maximum cache entries
RPC_CACHE_DEFAULT_TTL=30000      # default cache TTL in milliseconds

# Cost Optimization
RPC_COST_OPTIMIZATION_ENABLED=true
RPC_MAX_DAILY_COST=10.00         # maximum daily cost in USD

# Logging Level for RPC Manager
RPC_LOG_LEVEL=info               # debug, info, warn, error

# Provider Selection Strategy
RPC_SELECTION_STRATEGY=smart     # smart, round-robin, least-latency, cost-optimized

# Emergency Fallback Configuration
RPC_ENABLE_PUBLIC_FALLBACKS=true # enable free public RPC endpoints as last resort
RPC_FALLBACK_TIMEOUT=15000       # timeout for fallback providers in milliseconds