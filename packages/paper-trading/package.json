{
  "name": "@trading-bot/paper-trading",
  "version": "2.0.0",
  "description": "Enterprise-grade paper trading simulation engine with sophisticated market modeling, realistic execution simulation, and comprehensive performance analytics for trading bot strategy testing",
  "keywords": [
    "paper-trading",
    "trading-simulation",
    "market-simulation",
    "strategy-testing",
    "backtesting",
    "trading-analytics",
    "portfolio-simulation",
    "execution-simulation",
    "slippage-modeling",
    "latency-simulation",
    "trading-performance",
    "financial-simulation",
    "risk-free-trading",
    "strategy-validation",
    "market-modeling"
  ],
  "author": {
    "name": "Trading Bot Development Team",
    "email": "dev@tradingbot.com",
    "url": "https://tradingbot.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trading-bot/monorepo.git",
    "directory": "packages/paper-trading"
  },
  "homepage": "https://github.com/trading-bot/monorepo/tree/main/packages/paper-trading",
  "bugs": {
    "url": "https://github.com/trading-bot/monorepo/issues"
  },
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "pnpm": ">=8.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.mjs",
      "require": "./dist/config.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:main",
    "build:clean": "rimraf dist",
    "build:main": "tsup",
    "build:watch": "tsup --watch",
    "dev": "pnpm run build:watch",
    "lint": "eslint . --ext .ts --cache --cache-location node_modules/.cache/eslint",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "pnpm run lint && pnpm run format:check && pnpm run type-check",
    "clean": "rimraf dist node_modules/.cache",
    "prepare": "pnpm run build"
  },
  "dependencies": {
    "@trading-bot/types": "workspace:*",
    "@trading-bot/crypto": "workspace:*",
    "eventemitter3": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@trading-bot/config": "workspace:*",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/trading-bot"
  },
  "volta": {
    "node": "20.11.1",
    "pnpm": "8.15.4"
  }
}
